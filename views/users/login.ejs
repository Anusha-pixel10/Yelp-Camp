<% layout('layouts/boilerplate') %>
<div class="container justify-content-center align-items-center mt-5">
        <div class="row">
                <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                        <div class="card shadow">
                                <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?fm=jpg&q=60&w=3000&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8c3VtbWVyJTIwY2FtcGluZ3xlbnwwfHwwfHx8MA%3D%3D">
                                <div class="card-body">
                                <h5 class="card-title">Login</h5>
                                <form action="/login" method="POST" class="validated-form" novalidate>
                                <div class="mb-3">
                                        <label class="form-label" for="username">Username</label>
                                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                                        <div class="valid-feedback">Looks good!</div>
                                </div>

                                <div class="mb-3">
                                        <label class="form-label" for="password">Passowrd</label>
                                        <input class="form-control" type="password" id="password" name="password" required>
                                        <div class="valid-feedback">Looks good!</div>
                                </div>
                                <button class = 'btn btn-success w-100'>Login</button>
                                </form>
                                </div>
                        </div>
                </div>
        </div>
</div>